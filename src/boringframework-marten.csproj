<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Boring-Marten</AssemblyName>
    <RootNamespace>Boring.Marten</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>BoringFramework-Marten</PackageId>
    <Authors>Pablo Pioli</Authors>
    <Company>Pablo Pioli</Company>
    <Product>The Boring Framework</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/pablopioli/boringframework-marten</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BoringFramework" Version="1.6.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

</Project>
